<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Footer Dark Mode Toggle
    const footerThemeToggle = document.getElementById('footer-theme-toggle');
    const footerDarkIcon = document.getElementById('footer-theme-toggle-dark-icon');
    const footerLightIcon = document.getElementById('footer-theme-toggle-light-icon');

    function updateFooterThemeIcons() {
      if (document.documentElement.classList.contains('dark')) {
        footerDarkIcon?.classList.add('hidden');
        footerLightIcon?.classList.remove('hidden');
      } else {
        footerDarkIcon?.classList.remove('hidden');
        footerLightIcon?.classList.add('hidden');
      }
    }

    function toggleFooterTheme() {
      if (document.documentElement.classList.contains('dark')) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
      updateFooterThemeIcons();
      
      // Sync mit Header Theme Toggles
      const event = new CustomEvent('themeChanged');
      document.dispatchEvent(event);
    }

    footerThemeToggle?.addEventListener('click', toggleFooterTheme);

    // Initialize footer theme icons
    updateFooterThemeIcons();

    // Listen for theme changes from header
    document.addEventListener('themeChanged', updateFooterThemeIcons);
  });
</script>