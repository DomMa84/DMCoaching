---
// src/components/Footer.astro v1.0 (Server-Mode & SEO optimiert)
// Footer - Enhanced footer component with structured data

import Logo from './Logo.astro';

interface Props {
  variant?: 'default' | 'minimal' | 'extended';
  showSocial?: boolean;
  showNewsletter?: boolean;
  className?: string;
}

const {
  variant = 'default',
  showSocial = true,
  showNewsletter = false,
  className = ""
} = Astro.props;

// Generate current year server-side for better SEO
const currentYear = new Date().getFullYear();

// Company information for structured data
const companyInfo = {
  name: "Dominik Maier Coaching & Interim Management",
  description: "Experte f√ºr strategische Unternehmensentwicklung und Value Management",
  address: {
    street: "Gaisbachweg 4",
    city: "Bad Rippoldsau", 
    postalCode: "77776",
    country: "Deutschland"
  },
  contact: {
    phone: "+497440913367",
    email: "webmaster@maier-value.com"
  },
  social: {
    linkedin: "https://www.linkedin.com/in/dominik-maier-22144710a/"
  }
};

// Navigation items with enhanced structure
const footerNavigation = [
  {
    label: "Rechtliches",
    items: [
      { name: "Impressum", href: "/impressum", rel: "nofollow" },
      { name: "Datenschutz", href: "/datenschutz", rel: "nofollow" },
      { name: "AGB", href: "/agb", rel: "nofollow" }
    ]
  },
  {
    label: "Services",
    items: [
      { name: "Strategische Beratung", href: "/leistung/strategische-unternehmensentwicklung" },
      { name: "Vertriebsoptimierung", href: "/leistung/vertriebsoptimierung" },
      { name: "Value Management", href: "/leistung/wertanalyse" }
    ]
  },
  {
    label: "Unternehmen", 
    items: [
      { name: "√úber uns", href: "/ueber-mich" },
      { name: "Kontakt", href: "/kontakt" },
      { name: "Karriere", href: "/karriere" }
    ]
  }
];

console.log(`ü¶∂ Footer v1.0 rendered - ${variant} variant, year: ${currentYear}`);
---

<footer 
  class={`footer-container bg-light-darker dark:bg-dark-lighter text-text-dark dark:text-text-light border-t border-light-darkest dark:border-dark-lightest ${className}`}
  role="contentinfo"
  aria-label="Website-Footer mit Kontaktinformationen und Links"
>
  <div class="container mx-auto px-4 py-10">
    
    {variant === 'extended' ? (
      <!-- Extended Footer Layout -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
        <!-- Company Info -->
        <div class="lg:col-span-2">
          <div class="flex flex-col items-start">
            <Logo height={48} class="mb-4" />
            <h2 class="text-lg font-semibold mb-3 text-text-dark dark:text-text-light">
              {companyInfo.name}
            </h2>
            <p class="text-sm text-text-muted mb-4 leading-relaxed">
              {companyInfo.description}. Wir helfen Unternehmen dabei, ihre Prozesse zu optimieren, 
              Kosten zu reduzieren und nachhaltiges Wachstum zu erreichen.
            </p>
            
            <!-- Contact Info -->
            <div class="space-y-2 text-sm">
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 mr-2 text-primary-gold" aria-hidden="true">
                  <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                </svg>
                <address class="not-italic text-text-muted">
                  {companyInfo.address.street}, {companyInfo.address.postalCode} {companyInfo.address.city}
                </address>
              </div>
              
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 mr-2 text-primary-gold" aria-hidden="true">
                  <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
                </svg>
                <a href={`tel:${companyInfo.contact.phone}`} class="text-text-muted hover:text-primary-gold transition-colors">
                  {companyInfo.contact.phone}
                </a>
              </div>
              
              <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 mr-2 text-primary-gold" aria-hidden="true">
                  <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
                  <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
                </svg>
                <a href={`mailto:${companyInfo.contact.email}`} class="text-text-muted hover:text-primary-gold transition-colors">
                  {companyInfo.contact.email}
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Navigation Columns -->
        {footerNavigation.map((section) => (
          <div>
            <h3 class="text-sm font-semibold text-text-dark dark:text-text-light mb-3 uppercase tracking-wider">
              {section.label}
            </h3>
            <nav aria-label={`${section.label} Navigation`}>
              <ul class="space-y-2">
                {section.items.map((item) => (
                  <li>
                    <a 
                      href={item.href}
                      rel={item.rel}
                      class="text-sm text-text-muted hover:text-primary-gold transition-colors"
                    >
                      {item.name}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>
        ))}
      </div>
    ) : variant === 'minimal' ? (
      <!-- Minimal Footer Layout -->
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center">
          <Logo height={32} class="mr-3" />
          <span class="text-sm text-text-muted">
            &copy; {currentYear} Dominik Maier
          </span>
        </div>
        
        <nav class="flex space-x-6" aria-label="Footer Navigation">
          <a href="/impressum" class="text-sm text-text-muted hover:text-primary-gold transition-colors" rel="nofollow">
            Impressum
          </a>
          <a href="/datenschutz" class="text-sm text-text-muted hover:text-primary-gold transition-colors" rel="nofollow">
            Datenschutz
          </a>
        </nav>
      </div>
    ) : (
      <!-- Default Footer Layout -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
        <!-- Logo & Branding -->
        <div class="flex flex-col items-center md:items-start">
          <Logo height={40} class="mb-4" />
          <p class="text-center md:text-left text-sm text-text-muted leading-relaxed">
            Coaching und Interim Management<br>
            Experte f√ºr Unternehmensentwicklung<br>
            <strong>15+ Jahre Erfahrung</strong>
          </p>
        </div>
        
        <!-- Footer Navigation -->
        <nav class="flex flex-col md:flex-row items-center justify-center space-y-3 md:space-y-0 md:space-x-6 h-full" aria-label="Footer Navigation">
          <a href="/impressum" class="text-sm hover:text-primary-gold transition-colors" rel="nofollow">
            Impressum
          </a>
          <a href="/datenschutz" class="text-sm hover:text-primary-gold transition-colors" rel="nofollow">
            Datenschutz
          </a>
          <a href="/agb" class="text-sm hover:text-primary-gold transition-colors" rel="nofollow">
            AGB
          </a>
        </nav>
        
        <!-- Social Media & Contact -->
        <div class="flex flex-col items-center md:items-end space-y-3">
          {showSocial && (
            <div class="flex space-x-4">
              <a 
                href={companyInfo.social.linkedin}
                target="_blank" 
                rel="noopener noreferrer"
                aria-label="Dominik Maier LinkedIn Profil besuchen"
                class="flex items-center text-sm hover:text-primary-gold transition-colors group"
              >
                <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"></path>
                </svg>
                LinkedIn
              </a>
            </div>
          )}
          
          <!-- Quick Contact -->
          <div class="text-center md:text-right">
            <p class="text-xs text-text-muted mb-1">Kostenlose Beratung:</p>
            <a 
              href={`tel:${companyInfo.contact.phone}`}
              class="text-sm font-medium text-primary-gold hover:text-primary-dark transition-colors"
              aria-label={`Anrufen unter ${companyInfo.contact.phone}`}
            >
              {companyInfo.contact.phone}
            </a>
          </div>
        </div>
      </div>
    )}

    {showNewsletter && (
      <!-- Newsletter Signup -->
      <div class="mt-8 pt-8 border-t border-light-darkest dark:border-dark-lightest">
        <div class="max-w-md mx-auto text-center">
          <h3 class="text-lg font-semibold mb-2 text-text-dark dark:text-text-light">
            Business Newsletter
          </h3>
          <p class="text-sm text-text-muted mb-4">
            Erhalten Sie monatlich Insights zu Unternehmensentwicklung und Value Management.
          </p>
          <form class="flex gap-2">
            <input 
              type="email" 
              placeholder="ihre.email@beispiel.de"
              class="flex-1 px-3 py-2 text-sm bg-light dark:bg-dark border border-light-darkest dark:border-dark-lightest rounded-md focus:outline-none focus:ring-2 focus:ring-primary-gold"
              aria-label="E-Mail-Adresse f√ºr Newsletter"
            />
            <button 
              type="submit"
              class="px-4 py-2 bg-primary-gold text-white text-sm font-medium rounded-md hover:bg-primary-dark transition-colors focus:outline-none focus:ring-2 focus:ring-primary-gold focus:ring-offset-2"
            >
              Anmelden
            </button>
          </form>
        </div>
      </div>
    )}
    
    <!-- Copyright & Legal -->
    <div class="mt-8 pt-6 border-t border-light-darkest dark:border-dark-lightest">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm text-text-muted text-center md:text-left">
          &copy; {currentYear} {companyInfo.name}. Alle Rechte vorbehalten.
        </p>
        
        <div class="flex items-center space-x-4 text-xs text-text-muted">
          <span>Made with ‚ù§Ô∏è in Baden-W√ºrttemberg</span>
          <span>‚Ä¢</span>
          <span>DSGVO konform</span>
          <span>‚Ä¢</span>
          <span>CO‚ÇÇ neutral</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Structured Data for Organization -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": companyInfo.name,
    "description": companyInfo.description,
    "url": "https://maier-value.com",
    "logo": "https://maier-value.com/logo.svg",
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": companyInfo.contact.phone,
      "email": companyInfo.contact.email,
      "contactType": "customer service",
      "availableLanguage": ["German", "English"]
    },
    "address": {
      "@type": "PostalAddress",
      "streetAddress": companyInfo.address.street,
      "addressLocality": companyInfo.address.city,
      "postalCode": companyInfo.address.postalCode,
      "addressCountry": "DE"
    },
    "sameAs": [
      companyInfo.social.linkedin
    ],
    "founder": {
      "@type": "Person",
      "name": "Dominik Maier"
    },
    "areaServed": "DE",
    "serviceType": [
      "Strategische Unternehmensentwicklung",
      "Vertriebsoptimierung", 
      "Marketing-Strategien",
      "Value Management",
      "Interim Management"
    ]
  })} />
</footer>

<style>
  /* Enhanced footer styling */
  .footer-container {
    background: linear-gradient(180deg, 
      rgba(248, 250, 252, 0.8) 0%, 
      rgba(248, 250, 252, 1) 100%);
    backdrop-filter: blur(10px);
  }

  .dark .footer-container {
    background: linear-gradient(180deg, 
      rgba(30, 30, 30, 0.8) 0%, 
      rgba(30, 30, 30, 1) 100%);
  }

  /* Link hover effects */
  .footer-container a {
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .footer-container a:hover {
    transform: translateY(-1px);
  }

  /* Logo hover effect */
  .footer-container .logo:hover {
    transform: scale(1.05);
    transition: transform 0.3s ease;
  }

  /* Social icon effects */
  .footer-container .group:hover svg {
    animation: pulse 1s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  /* Newsletter form styling */
  .footer-container input:focus {
    box-shadow: 0 0 0 2px var(--primary-gold);
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .footer-container {
      background: white;
      border-top: 3px solid black;
    }

    .dark .footer-container {
      background: black;
      border-top: 3px solid white;
    }
  }

  /* Print styles */
  @media print {
    .footer-container {
      background: white !important;
      color: black !important;
      border-top: 1px solid #ccc;
    }

    .footer-container a {
      color: black !important;
      text-decoration: underline;
    }

    /* Hide social icons in print */
    .footer-container svg {
      display: none;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .footer-container {
      padding-bottom: env(safe-area-inset-bottom, 0);
    }
  }
</style>