---
import IconSVG from './IconSVG.astro';

interface Props {
  title: string;
  description: string;
  iconPath: string;
  link: string;
  delay?: number;
}

const { title, description, iconPath, link, delay = 100 } = Astro.props;
---

<div 
  class="bg-light-darker dark:bg-dark-lighter rounded-lg p-5 md:p-6 flex flex-col items-center text-center transition-transform hover:transform hover:scale-105"
  data-aos="fade-up"
  data-aos-delay={delay}
>
  <div class="bg-primary-gold/10 p-3 md:p-4 rounded-full mb-4 md:mb-6">
    <IconSVG iconPath={iconPath} className="w-8 h-8 md:w-10 md:h-10 text-primary-gold" />
  </div>
  <h3 class="text-lg md:text-xl font-semibold mb-3 md:mb-4 text-text-dark dark:text-text-light leading-tight">{title}</h3>
  <p class="text-text-muted mb-4 md:mb-6 text-sm md:text-base">{description}</p>
  <a href={link} class="text-primary-gold font-medium hover:underline mt-auto inline-flex items-center text-sm md:text-base">
    Mehr erfahren
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4 md:w-5 md:h-5 ml-1" aria-hidden="true">
      <path fill-rule="evenodd" d="M5 10a.75.75 0 01.75-.75h6.638L10.23 7.29a.75.75 0 111.04-1.08l3.5 3.25a.75.75 0 010 1.08l-3.5 3.25a.75.75 0 11-1.04-1.08l2.158-1.96H5.75A.75.75 0 015 10z" clip-rule="evenodd" />
    </svg>
  </a>
</div>