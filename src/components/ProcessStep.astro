---
interface Props {
  number: string;
  title: string;
  description: string;
  delay?: number;
}

const { number, title, description, delay = 100 } = Astro.props;
---

<div class="relative z-10" data-aos="fade-up" data-aos-delay={delay}>
  <div class="flex flex-col items-center">
    <div class="w-16 h-16 rounded-full bg-primary-gold flex items-center justify-center text-white text-xl font-bold mb-4">
      {number}
    </div>
    <h3 class="text-xl font-semibold text-text-dark dark:text-text-light mb-3">{title}</h3>
    <div class="bg-light-darker dark:bg-dark-lighter rounded-lg p-5 text-center">
      <p class="text-text-muted">{description}</p>
    </div>
  </div>
</div>