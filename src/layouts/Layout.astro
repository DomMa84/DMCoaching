    </script>

    <!-- Core Web Vitals Monitoring -->
    <script>
      // Performance Monitoring (nur wenn Performance API verf√ºgbar)
      if ('performance' in window && 'PerformanceObserver' in window) {
        // LCP (Largest Contentful Paint) Observer
        try {
          new PerformanceObserver((entryList) => {
            const entries = entryList.getEntries();
            const lastEntry = entries[entries.length - 1];
            console.log('üìä LCP:', Math.round(lastEntry.startTime), 'ms');
          }).observe({entryTypes: ['largest-contentful-paint']});
        } catch (e) {
          console.log('LCP monitoring not supported');
        }

        // CLS (Cumulative Layout Shift) Observer
        try {
          let clsValue = 0;
          new PerformanceObserver((entryList) => {
            for (const entry of entryList.getEntries()) {
              if (!entry.hadRecentInput) {
                clsValue += entry.value;
              }
            }
            console.log('üìä CLS:', clsValue.toFixed(3));
          }).observe({entryTypes: ['layout-shift']});
        } catch (e) {
          console.log('CLS monitoring not supported');
        }

        // Page Load Performance
        window.addEventListener('load', () => {
          const perfData = performance.getEntriesByType('navigation')[0];
          if (perfData) {
            const loadTime = perfData.loadEventEnd - perfData.loadEventStart;
            console.log('üìä Page Load Time:', Math.round(loadTime), 'ms');
          }
        });
      }
    </script>

    <!-- Prefetch wichtiger Seiten bei Hover -->
    <script>
      // Intelligent Link Prefetching (nur bei ausreichend Bandbreite)
      if ('connection' in navigator && navigator.connection.effectiveType !== 'slow-2g') {
        let prefetchTimer;
        
        document.addEventListener('mouseover', (e) => {
          const link = e.target.closest('a[href^="/"]');
          if (link && !link.hasAttribute('data-prefetched')) {
            prefetchTimer = setTimeout(() => {
              const prefetchLink = document.createElement('link');
              prefetchLink.rel = 'prefetch';
              prefetchLink.href = link.href;
              document.head.appendChild(prefetchLink);
              link.setAttribute('data-prefetched', 'true');
            }, 100); // 100ms delay
          }
        });

        document.addEventListener('mouseout', () => {
          clearTimeout(prefetchTimer);
        });
      }
    </script>
    <!-- =================== PERFORMANCE SCRIPTS ENDE =================== -->
    
