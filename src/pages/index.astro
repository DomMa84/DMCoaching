---
// Index.astro v1.3.5 - NUR Hero text-white Fix
// CHANGELOG v1.3.5:
// - ✅ FIX: text-white auf H1 und P im Hero hinzugefügt
// - ✅ KEEP: Alle anderen Bereiche komplett unverändert von v1.3.4
// - ✅ KEEP: Desktop 4-Spalten Layout (lg:grid-cols-4)
// - ✅ KEEP: ContactForm v18.6 integration

import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Dominik Maier - Interim Management & Business Consulting">
  <!-- Hero Section - NUR text-white hinzugefügt -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-gold/10 to-transparent"></div>
    <div class="absolute top-20 left-10 w-32 h-32 bg-primary-gold/20 rounded-full blur-xl"></div>
    <div class="absolute bottom-20 right-10 w-48 h-48 bg-primary-gold/15 rounded-full blur-2xl"></div>
    
    <div class="relative z-10 container mx-auto px-4 sm:px-6 text-center">
      <div class="max-w-4xl mx-auto text-white hero-text-super-contrast aos-init aos-animate" data-aos="fade-right" data-aos-duration="1000">
        
        <!-- Hero Text - MIT text-white Fix -->
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          Erfolg beginnt mit uns
        </h1>
        
        <p class="text-xl sm:text-2xl text-white mb-8 leading-relaxed max-w-3xl mx-auto">
          Wir helfen Ihnen ihre Prozesse und Produkte im Unternehmen weiterzuentwickeln und wachsen zu lassen – mit einem Fokus auf Ihren Kunden!
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center" data-aos="fade-up" data-aos-delay="200">
          <a href="#contact" class="bg-primary-gold hover:bg-primary-gold/90 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
            Kostenlose Beratung
          </a>
          <a href="#services" class="border-2 border-white/50 hover:border-white text-white hover:bg-white/10 px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-300">
            Services entdecken
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section - 4-Spalten Desktop Layout -->
  <section id="services" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Unsere Services</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Maßgeschneiderte Lösungen für Ihr Unternehmen
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="100">
          <div class="w-16 h-16 bg-primary-gold/15 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Strategieentwicklung</h3>
          <p class="text-gray-600 dark:text-gray-300">Entwicklung nachhaltiger Unternehmensstrategien für langfristigen Erfolg</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="200">
          <div class="w-16 h-16 bg-primary-gold/15 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Vertriebsoptimierung</h3>
          <p class="text-gray-600 dark:text-gray-300">Steigerung der Vertriebseffizienz durch optimierte Prozesse</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="300">
          <div class="w-16 h-16 bg-primary-gold/15 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Marketing & Brand</h3>
          <p class="text-gray-600 dark:text-gray-300">Aufbau starker Marken und effektiver Marketing-Strategien</p>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300" data-aos="fade-up" data-aos-delay="400">
          <div class="w-16 h-16 bg-primary-gold/15 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-8 h-8 text-primary-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Value Management</h3>
          <p class="text-gray-600 dark:text-gray-300">Maximierung des Unternehmenswerts durch strukturierte Wertschöpfung</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Value Management Circles - 4 nebeneinander -->
  <section class="py-16 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Value Management Ansatz</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Systematische Wertsteigerung durch datengetriebene Entscheidungen
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center" data-aos="zoom-in" data-aos-delay="100">
          <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-primary-gold to-primary-gold/80 rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Analyse</h3>
          <p class="text-gray-600 dark:text-gray-300">Bewertung Ihrer aktuellen Situation</p>
        </div>

        <div class="text-center" data-aos="zoom-in" data-aos-delay="200">
          <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-primary-gold to-primary-gold/80 rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Strategie</h3>
          <p class="text-gray-600 dark:text-gray-300">Maßgeschneiderte Strategien entwickeln</p>
        </div>

        <div class="text-center" data-aos="zoom-in" data-aos-delay="300">
          <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-primary-gold to-primary-gold/80 rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Umsetzung</h3>
          <p class="text-gray-600 dark:text-gray-300">Praktische Implementierung</p>
        </div>

        <div class="text-center" data-aos="zoom-in" data-aos-delay="400">
          <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-primary-gold to-primary-gold/80 rounded-full flex items-center justify-center shadow-lg">
            <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Optimierung</h3>
          <p class="text-gray-600 dark:text-gray-300">Kontinuierliche Verbesserung</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section - 4 Schritte -->
  <section id="process" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Unser Prozess</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Strukturierter Ansatz für nachhaltigen Erfolg
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center" data-aos="fade-up" data-aos-delay="100">
          <div class="w-20 h-20 mx-auto mb-6 bg-primary-gold rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg">1</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Analyse</h3>
          <p class="text-gray-600 dark:text-gray-300">Umfassende Bewertung der Situation</p>
        </div>

        <div class="text-center" data-aos="fade-up" data-aos-delay="200">
          <div class="w-20 h-20 mx-auto mb-6 bg-primary-gold rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg">2</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Strategie</h3>
          <p class="text-gray-600 dark:text-gray-300">Maßgeschneiderte Strategieentwicklung</p>
        </div>

        <div class="text-center" data-aos="fade-up" data-aos-delay="300">
          <div class="w-20 h-20 mx-auto mb-6 bg-primary-gold rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg">3</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Umsetzung</h3>
          <p class="text-gray-600 dark:text-gray-300">Praktische Implementierung</p>
        </div>

        <div class="text-center" data-aos="fade-up" data-aos-delay="400">
          <div class="w-20 h-20 mx-auto mb-6 bg-primary-gold rounded-full flex items-center justify-center text-white text-2xl font-bold shadow-lg">4</div>
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Erfolg</h3>
          <p class="text-gray-600 dark:text-gray-300">Nachhaltiger Erfolg</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-16 bg-white dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div data-aos="fade-right">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-6">Über Dominik Maier</h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
            Mit über 15 Jahren Erfahrung im Interim Management unterstütze ich Unternehmen dabei, ihre Potentiale zu entfalten.
          </p>
          <div class="grid grid-cols-2 gap-6">
            <div>
              <div class="text-3xl font-bold text-primary-gold mb-2">15+</div>
              <div class="text-gray-600 dark:text-gray-300">Jahre Erfahrung</div>
            </div>
            <div>
              <div class="text-3xl font-bold text-primary-gold mb-2">100+</div>
              <div class="text-gray-600 dark:text-gray-300">Projekte</div>
            </div>
          </div>
        </div>
        <div class="relative" data-aos="fade-left">
          <div class="aspect-square bg-gradient-to-br from-primary-gold/20 to-primary-gold/5 rounded-2xl flex items-center justify-center">
            <div class="text-center">
              <div class="w-32 h-32 bg-primary-gold rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-4xl font-bold text-white">DM</span>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Dominik Maier</h3>
              <p class="text-primary-gold font-medium">Interim Manager</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6">
      <div class="text-center mb-12" data-aos="fade-up">
        <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">Lassen Sie uns sprechen</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Bereit für den nächsten Schritt? Kontaktieren Sie mich für ein kostenloses Erstgespräch.
        </p>
      </div>
      
      <ContactForm />
    </div>
  </section>
</Layout>